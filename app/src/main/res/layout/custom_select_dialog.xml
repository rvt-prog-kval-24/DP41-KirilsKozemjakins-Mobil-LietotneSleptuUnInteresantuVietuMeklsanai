<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#16355A"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:fontFamily="@font/font_family_nunito"
        android:paddingLeft="20dp"
        android:text="Title"
        android:textAppearance="?android:textAppearanceLarge"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_image"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/dialog_image"
        android:layout_width="120dp"
        android:layout_height="120dp"

        android:src="@drawable/default_prof_pick"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_price"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:drawableRight="@drawable/ic_money_paw"
        android:fontFamily="@font/font_family_nunito"
        android:paddingRight="35dp"
        android:textAlignment="center"
        android:layout_marginTop="40dp"
        android:text="Price"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_image" />

    <Button
        android:id="@+id/select_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginRight="30dp"
        android:backgroundTint="#7AD180"
        android:fontFamily="@font/font_family_nunito"
        android:text="Select"

        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_price" />

    <Button
        android:id="@+id/negative_button"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="#AE1515"
        android:fontFamily="@font/font_family_nunito"
        android:text="Cancel"

        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_price" />

</androidx.constraintlayout.widget.ConstraintLayout>